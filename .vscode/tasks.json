{
    "version": "2.0.0",
    "tasks": [
        {
            "isBackground": true,
            "label": "Start Build Runner",
            "command": "flutter",
            "args": [
                "packages",
                "pub",
                "run",
                "build_runner",
                "watch",
                "--delete-conflicting-outputs"
            ],
            "runOptions": {
                "instanceLimit": 1
            },
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "problemMatcher": [
                "$dart-build_runner"
            ]
        },
        {
            "label": "Generate assets",
            "command": "sh",
            "args": [
                "scripts/generate_assets.sh"
            ]
        },
        {
            "label": "Change App-Name",
            "command": "flutter",
            "args": [
                "pub",
                "run",
                "flutter_app_name"
            ]
        },
        {
            "label": "Change App-Icon",
            "command": "flutter",
            "args": [
                "pub",
                "run",
                "flutter_launcher_icons:main"
            ]
        }
    ]
}